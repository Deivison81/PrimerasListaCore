
@{
    ViewBag.Title = "Index";
}

<link href="~/Content/datatables.css" rel="stylesheet" />
<link href="~/Content/CSSpropio.css" rel="stylesheet" />

<h2>Clientes</h2>

<br />
<button type="button" onclick="abrirModal(0)" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Agregar</button>

<div id="tabla">

</div>


<!-- Trigger the modal with a button -->
<!-- Modal -->
<div id="myModal" class="modal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Modal Header</h4>
            </div>
            <div class="modal-body">
                <table style="width:80%; margin:auto">
                    <tr>
                        <td width="40%">ID de Clientes</td>
                        <td width="60%"><input class="borrar" type="text" id="txtidclientes" readonly /></td>

                    </tr>
                    <tr>
                        <td width="40%">Ingrese Codigo Clientes</td>
                        <td width="60%"><input class="borrar obligatorio" type="text" id="txtco_cli" /></td>

                    </tr>
                    <tr>
                        <td width="40%">Ingrese Zona Des</td>
                        <td width="60%"><input class="borrar obligatorio" type="text" id="txtzonades" /></td>

                    </tr>
                    <!--* id_tipocliente, tip_cli, cli_des, direc1, dir_ent2, telefonos, inactivo, respons, id_zona, co_zon, id_segmento, co_seg, id_vendedor, co_ven, idingre, co_cta_ingr_egr, rif, email, juridico, ciudad, zip,
    id_pais, co_pais, cod_comercio, importado_web, importado_pro*/-->
                </table>
            </div>
            <div class="modal-footer">
                <button onclick="Agregar()" type="button" class="btn btn-success">Aceptar</button>
                <button id="btnCancelar" type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
            </div>
        </div>

    </div>
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/Adclientes.js"></script>
<script src="~/Scripts/datatables.min.js"></script>
