
@{
    ViewBag.Title = "Index";
}
<link href="~/Content/datatables.css" rel="stylesheet" />
<link href="~/Content/CSSpropio.css" rel="stylesheet" />

<h2>Vendedores</h2>
<br />
<button type="button" onclick="abrirModal(0)" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Agregar</button>


<div id="tabla">


</div>


<!-- Trigger the modal with a button -->
<!-- Modal -->
<div id="myModal" class="modal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Modal Header</h4>
            </div>
            <div class="modal-body">
                <table style="width:80%; margin:auto">
                    <tr>
                        <td width="40%">Id Vendedor</td>
                        <td width="60%"><input class="borrar" type="text" id="txtidvendedor" readonly /></td>

                    </tr>
                    <tr>
                        <td width="40%">Ingrese Codigo Vendedor</td>
                        <td width="60%"><input class="borrar obligatorio" type="text" id="txtcodigoZ" /></td>

                    </tr>
                    <tr>
                        <td width="40%">Ingrese tipo Vendedor</td>
                        <td width="60%"><input class="borrar obligatorio" type="text" id="txttipo" /></td>

                    </tr>
                    <tr>
                        <td width="40%">Ingrese Vendedor</td>
                        <td width="60%"><input class="borrar obligatorio" type="text" id="txtvendedor" /></td>

                    </tr>
                    <tr>
                        <td width="40%">Ingrese Zona</td>
                        <td width="60%"><select id="cbozona"></select></td>

                    </tr>
                </table>
            </div>
            <div class="modal-footer">
                <button onclick="Agregar()" type="button" class="btn btn-success">Aceptar</button>
                <button id="btnCancelar" type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
            </div>
        </div>

    </div>
</div>


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/Advendedor.js"></script>
<script src="~/Scripts/datatables.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>