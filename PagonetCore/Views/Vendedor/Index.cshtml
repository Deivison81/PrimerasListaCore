<!-- Trigger the modal with a button -->
<!-- Modal -->
<div id="myModal" class="modal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Agregar Vendedor</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-xs-10 col-xs-offset-2 col-md-9 col-md-offset-3">
                        <form>
                            <div class="form-group">
                                <label for="txtidvendedor">ID de Vendedor</label>
                                <input type="text" class="form-control borrar" id="txtidvendedor" placeholder="ID de País" readonly />
                            </div>
                            <div class="form-group">
                                <label for="txtcodigoZ">Código de Vendedor</label>
                                <input type="text" class="form-control borrar obligatorio" id="txtcodigoZ" placeholder="Ingrese Código de Vendedor" />
                            </div>
                            <div class="form-group">
                                <label for="txttipo">Tipo de Vendedor</label>
                                <input type="text" class="form-control borrar obligatorio" id="txttipo" placeholder="Ingrese Tipo de Vendedor" />
                            </div>
                            <div class="form-group">
                                <label for="txtvendedor">Vendedor</label>
                                <input type="text" class="form-control borrar obligatorio" id="txtvendedor" placeholder="Ingrese Vendedor" />
                            </div>
                            <div class="form-group">
                                <label for="cbozona">Zona</label>
                                <select id="cbozona" class="form-control"></select>
                            </div>
                        </form>
                    </div>
                </div>
