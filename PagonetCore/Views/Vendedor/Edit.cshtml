@model PagonetCore.Models.Advendedor

@{
    ViewBag.Title = "Modificar Vendedor";
}

<h2 class="d-flex justify-content-center">Modificar Vendedor</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
