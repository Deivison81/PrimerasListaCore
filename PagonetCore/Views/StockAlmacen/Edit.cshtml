@model PagonetCore.Models.StockAlma

@{
    ViewBag.Title = "Modificar Stock";
}

<div class="row justify-content-center mb-4">
    <h2>Modificar Stock</h2>
</div>

<hr />

<div class="row justify-content-center">
    <div class="col-9 offset-3 mr-5 col-sm-7 col-md-6 offset-lg-4 mr-lg-5">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.StockAlmacenID)

                <div class="form-group">
                    @Html.LabelFor(model => model.stock, htmlAttributes: new { @class = "control-label" })
                    <div>
                        @Html.EditorFor(model => model.stock, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.stock, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.cod_almacen, "Código Almacén", htmlAttributes: new { @class = "control-label" })
                    <div>
                        @*@Html.DropDownList("cod_almacen", null, htmlAttributes: new { @class = "form-control" })*@
                        @Html.DropDownListFor(x => x.Almacen, (IEnumerable<SelectListItem>)ViewBag.cod_almacen, htmlAttributes: new { @class = "form-control", @Name = "cod_almacen" })
                        @Html.ValidationMessageFor(model => model.cod_almacen, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.id_art, "ID Artículo", htmlAttributes: new { @class = "control-label" })
                    <div>
                        @*@Html.DropDownList("id_art", null, htmlAttributes: new { @class = "form-control" })*@
                        @Html.DropDownListFor(x => x.Articulo, (IEnumerable<SelectListItem>)ViewBag.id_art, htmlAttributes: new { @class = "form-control", @Name = "id_art" })
                        @Html.ValidationMessageFor(model => model.id_art, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <input type="submit" value="Guardar Stock" class="btn btn-primary btn-block" />
                    @Html.ActionLink("Volver a Stock Almacenes", "Index", null, new { @type = "button", @class = "form-btn btn btn-light btn-block" })
                </div>
            </div>
        }

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
    </div>
</div>