
@{
    ViewBag.Title = "Almacén";
}

<link href="~/Content/datatables.css" rel="stylesheet" />

<div>
    <div class="row">
        <div class="col-12">
            <h2>Almacén</h2>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-12">
            <span>Esta sección le permite realizar operaciones sobre los Almacenes.</span>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-12">
            <button type="button" onclick="abrirModal(0)" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Agregar</button>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-12">
            <div id="tabla" class="table-responsive"></div>
        </div>
    </div>
</div>

<!-- Trigger the modal with a button -->
<!-- Modal -->
<div id="myModal" class="modal" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Agregar un Almacén</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-10 offset-2 col-md-9 offset-md-3">
                        <form>
                            <div class="form-group">
                                <label for="txticod_almacen">ID de Almacén</label>
                                <input type="text" class="form-control borrar" id="txticod_almacen" placeholder="ID de Almacén" readonly />
                            </div>
                            <div class="form-group">
                                <label for="txtco_alma">Código de Almacén</label>
                                <input type="text" class="form-control borrar obligatorio" id="txtco_alma" placeholder="Ingrese Código de Almacén" />
                            </div>
                            <div class="form-group">
                                <label for="txtdes_alamacen">Descripción Almacén</label>
                                <input type="text" class="form-control borrar obligatorio" id="txtdes_alamacen" placeholder="Ingrese Descripción de Almacén" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button onclick="Agregar()" type="button" class="btn btn-success">Aceptar</button>
                <button id="btnCancelar" type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
            </div>
        </div>

    </div>
</div>


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/AdAlmacen.js"></script>
<script src="~/Scripts/datatables.min.js"></script>