@model IEnumerable<PagonetCore.Models.Adcondiciondepago>

@{
    ViewBag.Title = "Condiciones de Pago";
}

<div class="row justify-content-center mb-4">
    <h1 class="display-4">Condiciones de Pago</h1>
</div>

<div class="row justify-content-center mb-4">
    @Html.ActionLink("Crear Condición de Pago", "Create", null, new { @type = "button", @class = "btn btn-primary" })
</div>

<div class="row justify-content-center mb-4">
    <div class="col-12">
        <table class="table table-responsive table-bordered">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.co_cond)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.cond_des)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.dias_cred)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.importado_web)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.importado_pro)
                </th>
                <th>Acciones</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.co_cond)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.cond_des)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.dias_cred)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.importado_web)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.importado_pro)
                    </td>
                    <td>
                        @Html.ActionLink("Modificar", "Edit", new { id = item.id_condicion }) |
                        @Html.ActionLink("Detalles", "Details", new { id = item.id_condicion }) |
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.id_condicion })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>