@model PagonetCore.Models.Adcondiciondepago

@{
    ViewBag.Title = "Eliminar Condición de Pago";
}

<h2 class="d-flex justify-content-center">Eliminar Condición de Pago</h2>

<h3 class="d-flex justify-content-center">¿Está seguro de que desea eliminar la Condición de Pago?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt class="d-flex justify-content-center">
            @Html.DisplayNameFor(model => model.co_cond)
        </dt>

        <dd class="d-flex justify-content-center">
            @Html.DisplayFor(model => model.co_cond)
        </dd>

        <dt class="d-flex justify-content-center">
            @Html.DisplayNameFor(model => model.cond_des)
        </dt>

        <dd class="d-flex justify-content-center">
            @Html.DisplayFor(model => model.cond_des)
        </dd>

        <dt class="d-flex justify-content-center">
            @Html.DisplayNameFor(model => model.dias_cred)
        </dt>

        <dd class="d-flex justify-content-center">
            @Html.DisplayFor(model => model.dias_cred)
        </dd>

        <dt class="d-flex justify-content-center">
            @Html.DisplayNameFor(model => model.importado_web)
        </dt>

        <dd class="d-flex justify-content-center">
            @Html.DisplayFor(model => model.importado_web)
        </dd>

        <dt class="d-flex justify-content-center">
            @Html.DisplayNameFor(model => model.importado_pro)
        </dt>

        <dd class="d-flex justify-content-center">
            @Html.DisplayFor(model => model.importado_pro)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color col-10 offset-2 col-md-7 offset-md-5">
            <input type="submit" value="Eliminar" class="btn btn-default" /> &nbsp;|&nbsp;
            @Html.ActionLink("Volver a Condiciones de Pago", "Index")
        </div>
    }
</div>
