                <div class="form-group">
                    <input type="submit" value="Crear Serial" class="btn btn-primary btn-block" />
                    @Html.ActionLink("Volver a Seriales", "Index", null, new { @type = "button", @class = "form-btn btn btn-light btn-block" })
