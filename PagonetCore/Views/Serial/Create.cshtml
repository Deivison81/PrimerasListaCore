                    </div>*@

                <div class="form-group">
                    @Html.LabelFor(model => model.co_art, htmlAttributes: new { @class = "control-label" })
                    <div>
                        @Html.EditorFor(model => model.co_art, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.co_art, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.co_alma, htmlAttributes: new { @class = "control-label" })
