<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-dark bg-dark fixed-top navbar-expand-lg">
        <a class="navbar-brand hidden-sm hidden-md hidden-lg" href="/">Página Principal</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar" aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div id="navbar" class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li class="nav-item active">@Html.ActionLink("Clientes", "Index", "Cliente", new { }, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Cotización", "Index", "cotizacion", new { }, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Almacén", "Index", "Almacen", new { }, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Tipo de Cliente", "Index", "Tipocliente", new { }, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Ingresos", "Index", "Ingresos", new { }, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Segmento", "Index", "Segmento", new { }, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("País", "Index", "Adpais", new { }, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Vendedor", "Index", "Vendedor", new { }, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Zona", "Index", "zona", new { }, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Condiciones", "Index", "Condicion", new { }, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Transporte", "Index", "transporte", new { }, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Artículos", "Index", "Articulo", new { }, new { @class = "nav-link" })</li>
            </ul>
        </div>
    </nav>
    <br />
    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
